{
  "name": "reactwidgets",
  "version": "0.0.1",
  "description": "React Widgets",
  "main": "lib/index.js",
  "scripts": {
    "start": "webpack-dev-server",
    "coverage": "coveralls < ./test/coverage/lcov/lcov.info",
    "test": "karma start --single-run --reporters spec,coverage",
    "test-watch": "karma start --reporters dots,coverage",
    "build": "NODE_ENV=production webpack -p --config webpack.prod.config.js --progress --profile --colors",
    "prebuild": "babel src --out-dir lib",
    "create-release": "npm test && sh ./scripts/release",
    "publish-release": "npm test && sh ./scripts/publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tungpt247/reactwidgets.git"
  },
  "keywords": [
    "react",
    "react component",
    "component",
    "ui",
    "css",
    "sass",
    "template"
  ],
  "author": "JimmyTung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tungpt247/reactwidgets/issues"
  },
  "homepage": "https://github.com/tungpt247/reactwidgets#readme",
  "babel": {
    "env": {
      "production": {
        "plugins": [
          "transform-react-constant-elements",
          "transform-react-inline-elements"
        ]
      }
    }
  },
  "dependencies": {
    "font-awesome": "4.6.1",
    "immutable": "3.8.1",
    "lodash": "4.12.0",
    "react": "15.0.2",
    "react-addons-update": "15.0.2",
    "react-dom": "15.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-jest": "^12.0.2",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.5.0",
    "chai": "^3.5.0",
    "classnames": "^2.2.5",
    "conventional-changelog-cli": "^1.2.0",
    "conventional-recommended-bump": "^0.2.1",
    "coveralls": "^2.11.9",
    "css-loader": "^0.23.1",
    "enzyme": "^2.3.0",
    "eslint": "^2.9.0",
    "eslint-loader": "^1.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "image-webpack-loader": "^1.8.0",
    "isparta-loader": "^2.0.0",
    "istanbul": "^0.4.3",
    "jasmine-core": "^2.4.1",
    "jshint": "^2.9.2",
    "json-loader": "^0.5.4",
    "json5-loader": "^0.6.0",
    "jsx-loader": "^0.13.2",
    "karma": "^0.13.22",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^1.7.0",
    "node-sass": "^3.7.0",
    "normalize.css": "^4.1.1",
    "npm-install-webpack-plugin": "^3.1.2",
    "phantomjs-polyfill": "0.0.2",
    "phantomjs-prebuilt": "^2.1.7",
    "react-addons-test-utils": "^15.0.2",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "susy": "^2.2.12",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.12.0"
  }
}
